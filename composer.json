{
  "name": "simcript/pano",
  "description": "Pano application skeleton",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "alia_mehr",
      "email": "alia_mehr@yahoo.com"
    }
  ],
  "require": {
    "php": ">=8.2",
    "simcript/pano-framework": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "Modules\\": "modules/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-create-project-cmd": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ]
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "require-dev": {
    "phpunit/phpunit": "^12.5"
  }
}
